 <ul class="bxslider1" i>
<% @stickers.each do |i| %>

<% for image in i.images %>

<li><%=link_to  image_tag(image.image.url, :height => 250, :width =>500),  sticker_path(i.id) %>
<%= link_to i.name, sticker_path(i.id) %><br>
$<%= i.price %></li>
      
<% end %>
<% end %>

</ul>
<script >

$('.bxslider1').bxSlider({
   auto: true,  
          slideWidth: 308,
          infiniteLoop: true,
          speed: 5000,
          pager: false,
          autoHover: true,
          minSlides: 3,
          maxSlides: 12,
          slideMargin: 20,
          adaptiveHeight: true

});

</script>