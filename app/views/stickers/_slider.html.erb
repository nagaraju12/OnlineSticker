 <ul class="bxslider1" i>
<% @stickers.each do |i| %>

<% for image in i.images %>

<li><%=link_to  image_tag(image.image.url, :height => 250, :width =>500),  sticker_path(i.id) %>
<%= link_to i.name, sticker_path(i.id) %><br>
$<%= i.price %></li>
      
<% end %>
<% end %>

</ul>
<script >
$('.bxslider1').bxSlider({
   slideWidth: 300,
    minSlides: 2,
    maxSlides: 4,
    startSlide: 2,
autoHover: true,
  ticker: true,
  auto: true,
  speed: 30000
});

</script>