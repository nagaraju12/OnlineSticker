<%= link_to i.name, store_path(i.id) %><br>
$<%= i.price %><br>
<div class="floating"><%= button_to 'Add to Cart', lineitems_path(sticker_id: i),class: "btn btn-warning btn-sm"  %></div>
<div class="floating"><%= link_to 'More info',store_path(i.id),class: "btn btn-success" %></div></li>
     
<% end %>
<% end %>

</ul>
