<p id="notice"><%= notice %></p>
<h1>Listing Stickers</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
    <th>Category</th>
      <th>Name</th>
      <th>Decription</th>
      <th>Price</th> 
      <th>Image</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stickers.each do |sticker| %>
      <tr>
      <td><%= sticker.category_id %></td>
        <td><%= sticker.name %></td>
        <td><%= sticker.description %></td>
        <td><%= sticker.price %></td>
        <td><% sticker.images.each do |image| %></td>
<td><%= image_tag image.image %></td>
<% end %>
        <td><%= link_to 'Show', sticker %></td>
        <td><%= link_to 'Edit', edit_sticker_path(sticker) %></td>
        <td><%= link_to 'Destroy', sticker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to "new sticker", new_sticker_path, :class => "button", :method => :get  %>
