<p id="notice"><%= notice %></p>

<h1><%= link_to "+New Sticker", new_sticker_path %></h1>
<div class="text-right">
<%= button_to "Back" , dashboards_index_path, :method => "get" %>
</div>
<style>
   div.text-right{
     float: right;
}
  </style>



<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th> 
      <th>Images</th> 
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @stickers.each do |sticker| %>
      <tr>
        <td><%= sticker.name %></td>
        <td><%= sticker.description %></td>
        <td><%= sticker.price %></td>
      <% sticker.images.each do |image| %>
<td><%= image_tag image.image %></td>
<% end %>

 <td><%= link_to 'Show', sticker %></td>
        <td><%= link_to 'Edit', edit_sticker_path(sticker) %></td>
        <td><%= link_to 'Destroy', sticker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <a href="/cart/<%= sticker.id %>">Add To cart </a> </td>
      </tr>
      
    <% end %>
  </tbody>
</table>
 
<br>

