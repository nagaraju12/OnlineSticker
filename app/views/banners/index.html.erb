<p id="notice"><%= notice %></p>
<h1><%= link_to '+New Banner', new_banner_path %></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.name %></td>
     <% banner.images do |image| %>
<td><%= image_tag image.image %></td>
<% end %>
        <td><%= link_to 'Show', banner %></td>
        <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
        <td><%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


