<h1>Your Cart</h1>


<% if @cart.empty? %><br>
<p>Your car is empty</p>
<% else %>
<%= link_to 'Empty YOUR Cart' ,cart_clear_path %>
<% end %>
<br><br><br>
<% total = 0 %>
<ul>
<% @cart.each do |id , quantity| %>
<% sticker = Sticker.find_by_id(id) %>

<li>
<%= link_to sticker.name, sticker %>
<p><%= sticker.description %></p>
<p><%= number_to_currency(sticker.price, :unit => '$') %></p>
<p>Quantity: <%= quantity %></p>
</li>

<% total += quantity * sticker.price %>



<% end %>

<p><b> <%= number_to_currency(total, :unit => '$') %></b></p>
</ul>