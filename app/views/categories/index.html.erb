<p id="notice"><%= notice %></p>
<h1>Listing Categories</h1>

<table >
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><% category.images.each do |image| %>
<%= link_to  image_tag(image.image.url, :height => 50, :width =>80 ), category_path(category.id) %>
<% end %>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to "new category", new_category_path, :class => "button", :method => :get  %>
