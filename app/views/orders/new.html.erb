

<% if !@order.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
    <h2>Order Form</h2>

<div class="well">
  <%= form_for @order, html: { multipart: true } do |f| %>

  <%= f.label :name %><br>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.text_field :name, placeholder: "Customer Name", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :email %><br>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span>
          <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :phone %><br>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-phone"></span>
          <%= f.text_field :phone, placeholder: "Phone", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :address %><br>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-list-alt"></span>
          <%= f.text_area :address, placeholder: "Address", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :Zip_code %><br/>
    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-road"></span>
          <%= f.text_field :zip, placeholder: "Zip_code", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    
    <div class="field">
    <%= f.label :Rc_book_of_car %>
    <%= f.file_field :attachment %>
    </div>

    <%= f.label :Vehicle_no %>
    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-list"></span>
          <%= f.text_field :vehicle_no, placeholder: "Vehicle_no", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :Vehicle_Model %><br/>
    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-list"></span>
          <%= f.text_field :vehicle_model, placeholder: "Vehicle_Model", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.label :Vehicle_make %><br/>
    <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-list"></span>
          <%= f.text_field :vehicle_make, placeholder: "Vehicle_make", class: "form-control input-lg", label: false, :required =>true %>
        </div>

    <%= f.submit "Place Order",class: "btn btn-success"%>
    <% end %>

</div>
  </div>
    </div>


    <style>
h2 {
    text-shadow: 2px 2px 5px black;
}
</style>