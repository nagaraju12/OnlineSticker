<ul class="bxslider" i>
<% @banners.each do |i| %>
<% for image in i.images %>
<li><%= image_tag(image.image.url, :height => 450, :width =>1200, :title => "#{i.name}") %>
<% end %>
<% end %>

</ul>
<script >
$('.bxslider').bxSlider({
   mode: 'fade',
   captions: true,
   autoHover: true,
	
  auto: true
});

</script>

