<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<div class="row">
<% @stickers.each do |sticker| %>
<% cache ['entry', sticker] do %>
<div class="entry">
<div class="col-sm-1 col-md-3">
<div class="tumbnail">

<% sticker.images.each do |i| %>
<td><%= link_to  image_tag(i.image , :height => 180, :width =>180), store_path(i.id) %></td><br>
<%= sticker.name %><br>


<div class="price_line">
<span class="price"><%= number_to_currency(sticker.price) %></span><br>

<td><div class="floating"><%= button_to 'Add to Cart', lineitems_path(sticker_id: sticker),class: "btn btn-success"  %></div>
<div class="floating"><%= link_to 'More Info',store_path(i.id),class: "btn btn-warning btn-sm" %></div>
</td>
<%#= button_to 'Delete Cart', stores , method: :delete, data: { confirm: 'Are you sure?' }  %>
</div>
</div>
<% end %>
</div>
</div>
<% end %>
<% end %><br><br>
