<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
  <div class="commonrow">
<% @stickers.each do |sticker| %>
<% cache ['entry', sticker] do %>
<div class="entry">
<div class="col-sm-1 col-md-4">
<div class="tumbnail">
<div class="leftSec" style="max-height: 400px;overflow: auto;">
<% sticker.images.each do |i| %>
<td><div class="midSec"><%= link_to  image_tag(i.image, :height => 140, :width =>140 ), store_path(i.id) %></td><br></div>
<%= sticker.name %><br>


<div class="price_line">
<span class="price"><%= number_to_currency(sticker.price) %></span>
<td><%= button_to 'Add to Cart', lineitems_path(:sticker_id => sticker),class: "btn btn-warning btn-sm"  %><%= link_to 'Buy Now',store_path(i.id),class: "btn btn-success" %>
</td>
<%#= button_to 'Delete Cart', stores , method: :delete, data: { confirm: 'Are you sure?' }  %>
</div>
</div>
</td>
</div>
<% end %>
</div>
</div><br>
<% end %>

<style>
.floating {
	display:inline-block;
                  margin: 10px;
                  }


                  </style>

                  

<% end %>