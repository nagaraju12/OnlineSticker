<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <%= f.label :email %><br/>
   <div class="form-group">
          <%= f.text_field :email, placeholder: "Email", class: "form-control input-lg", label: false, autofocus: true, :required =>true %>
        </div>

        <%= f.label :password %><br/>
   <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false, :required =>true %>
        </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Log in",class: "btn btn-primary"%>
    <% end %>

<%= render "devise/shared/links" %>
</div>