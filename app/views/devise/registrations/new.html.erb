<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
<h2>Sign Up As Buyer</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :role => params[:role])) do |f| %>
  <%= devise_error_messages! %>
 <br>
      <%= f.hidden_field :role, :value => params[:role] %>

      <%= f.label :name %><br/>
   <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control input-lg", label: false, autofocus: true, :required =>true %>
        </div>

  <%= f.label :email %><br/>
   <div class="form-group">
          <%= f.text_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true %>
        </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
   <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false, :required =>true %>
        </div>
  </div>

  <%= f.label :password_confirmation %><br/>
   <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: "Password_Confirmation", class: "form-control input-lg", label: false, :required =>true %>
        </div>

  <%= f.submit "Sign Up",class: "btn btn-primary"%>
    <% end %>

<%= render "devise/shared/links" %>
</div>