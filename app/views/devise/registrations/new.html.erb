<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
<h2>Sign Up As Buyer</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :role => params[:role])) do |f| %>
  <%= devise_error_messages! %>
 <br>
      <%= f.hidden_field :role, :value => params[:role] %>




      <%= f.label :name %><br/>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.text_field :name, placeholder: "Name", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>

    <%= f.label :email %><br/>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span>
          <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
      <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-hand-right"></span>
          <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>
  </div>

  <%= f.label :password_confirmation %><br/>
   <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-hand-right"></span>
          <%= f.password_field :password_confirmation, placeholder: "Password_confirmation", class: "form-control input-lg", label: false, :required =>true %>
        </div><br/>
  </div>
        </div>

  <%= f.submit "Sign Up",class: "btn btn-primary"%>
    <% end %>

<%= render "devise/shared/links" %>
</div>

<style>
  h2 {
    text-shadow: 2px 2px 5px black;
  }

</style>